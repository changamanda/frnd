<div class = 'container'>
	<h2>All Slots</h2>
	<% ShiftItem.all.sort{|a, b| a.day <=> b.day}.each do |shiftitem| %>
		<%= shiftitem.dayf %>
		<ul>
		<% shiftitem.users.all.each do |user| %>
			<li><%= user.name %></li>
		<% end %>
		</ul>
	<% end %>

	<h2>All Shifts</h2>
	<% Shift.all.each do |shift| %>
		<%= shift.weekday %> <%= shift.time %> | <%= link_to("Create New Slots", new_shift_shift_item_path(shift.id)) %> | <% if shift.open %><%= link_to("Sign Up For Shift", shift_user_shifts_path(shift.id), method: :post) %><% else %>Filled!<% end %><br>
	<% end %>

	<h2>Create New Shift</h2>
	<%= form_for @shift do |f| %>
			<%= f.label :volunteer_number %>:
		  <%= f.text_field :volunteer_number %><br>

		  <%= f.label :weekday %>:
		  <%= f.text_field :weekday %><br>

		  <%= f.label :time %>:
		  <%= f.text_field :time %><br>

		  <%= f.submit %>
	<% end %>
</div>